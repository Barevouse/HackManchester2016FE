<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/CustomActionBar</item>
    </style>

    <style name="CustomActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="titleTextStyle">@style/CustomActionBar.Title</item>
    </style>

    <style name="CustomActionBar.Title">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="TwitterName">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="TweetBody">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="GuessConfirmationFont">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#0f0</item>
    </style>

</resources>
